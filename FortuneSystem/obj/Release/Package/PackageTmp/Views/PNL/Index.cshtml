@model IEnumerable<FortuneSystem.Models.Pedidos.OrdenesCompra>

@{
    ViewBag.Title = "Pnl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    tr.highlighted td {
        background: #b3e0ff;
    }

    #tablaPOPnl .po {
        color: #fff;
        background-color: #006bb3;
    }
            .edit_driver {

    }

        .edit_driver:hover {
            color: white !important;
            background: #3479bf !important;
            border-radius: 15px;
        }
</style>
</div>
<div class="container-fluid" style="padding-left:12em; padding-right:10em;">
    <div class="panel panel-primary" id="listaPO">
        <div class="panel-heading">
            <h2>PNL</h2>
        </div>
        <br />
        <br />
        <div id="div_tabla_estilos" style="width: 100%; height:650px; overflow:auto; ">
            <table align="center" class="table table-striped" id="tablaPOPnl">
                <thead class="po">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdPedido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VPO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CatClienteFinal.NombreCliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaCancel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaOrden)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalUnidades)
                        </th>
                        @if ((int)Session["idCargo"] == 5)
                        {
                            <th>ACTIONS</th>
                        }

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdPedido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VPO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CatClienteFinal.NombreCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCancel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaOrden)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalUnidades)
                        </td>
                        @if ((int)Session["idCargo"] == 5)
                        {
                        <td>
                            <a href="@Url.Action("Detalles", "Pnl",  new { id = item.IdPedido }) " class="btn edit_driver edicion_driver" Title="Details Style"> <span class="glyphicon glyphicon-search " aria-hidden="true" style="padding: 0px !important;"></span></a>
                        </td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    <script>
        $('#tablaPOPnl tr').click(function (e) {
            $('#tablaPOPnl tr').removeClass('highlighted');
            $(this).addClass('highlighted');
        });

    $(document).on("dblclick touchend", "#tablaPOPnl tr", function () {
        var row = this.rowIndex;
        if (row !== 0) {
            var numPedido = $('#tablaPOPnl tr:eq(' + row + ') td:eq(0)').html();
            var value_without_space = $.trim(numPedido);
            var url = '@Url.Action("Detalles", "Pnl", new { id = "_id_" })';
            window.location.href = url.replace('_id_', value_without_space);
        }
		});

    </script>
