@model IEnumerable<FortuneSystem.Models.Items.ItemDescripcion>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	tr.highlighted td {
		background: #b3e0ff;
	}

	table thead {
		color: #fff;
		background-color: #006bb3;
	}

	th {
		color: #fff;
		background-color: #006bb3;
	}

	#nuevo-usuario {
		margin-left: 50px;
		margin-top: 1px;
		width: 170px;
		height: 40px;
		border: none;
		font-size: 15px;
		font-weight: 600;
	}

	.edit_driver {
	}

		.edit_driver:hover {
			color: white !important;
			background: #3479bf !important;
			border-radius: 15px;
		}
</style>

@{
	if (TempData["itemOK"] != null)
	{
		<script type="text/javascript">
            alertify.set('notifier', 'position', 'top-right');
            alertify.notify(@Html.Raw(Json.Encode(TempData["itemOK"])), 'success', 5, null);

		</script>
	}
	if (TempData["itemError"] != null)
	{
		<script type="text/javascript">
            alertify.set('notifier', 'position', 'top-right');
            alertify.notify(@Html.Raw(Json.Encode(TempData["itemError"])), 'error', 5, null);

		</script>
	}
	if (TempData["itemEditar"] != null)
	{
		<script type="text/javascript">
            alertify.set('notifier', 'position', 'top-right');
            alertify.notify(@Html.Raw(Json.Encode(TempData["itemEditar"])), 'success', 5, null);

		</script>
	}
	if (TempData["itemEditarError"] != null)
	{
		<script type="text/javascript">
            alertify.set('notifier', 'position', 'top-right');
            alertify.notify(@Html.Raw(Json.Encode(TempData["itemEditarError"])), 'error', 5, null);

		</script>
	}
	if (TempData["itemEliminar"] != null)
	{
		<script type="text/javascript">
            alertify.set('notifier', 'position', 'top-right');
            alertify.notify(@Html.Raw(Json.Encode(TempData["itemEliminar"])), 'success', 5, null);

		</script>
	}
	if (TempData["itemEliminarError"] != null)
	{
		<script type="text/javascript">
            alertify.set('notifier', 'position', 'top-right');
            alertify.notify(@Html.Raw(Json.Encode(TempData["itemEliminarError"])), 'warning', 5, null);

		</script>
	}

}
</div>
<div class="modal fade" id="consulModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="consulModal" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h2 class="modal-title" id="exampleModalLabel">DETAILS STYLE</h2>
			</div>
			<div class="modal-body">
				<div id="ContenedorModal"></div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="editarModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="editarModal" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h2 class="modal-title" id="exampleModalLabel">EDIT STYLE</h2>
			</div>
			<div class="modal-body">
				<div id="ContenedorEditModal"></div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="crearModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="crearModal" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h2 class="modal-title" id="exampleModalLabel">ADD STYLE</h2>
			</div>
			<div class="modal-body">
				<div id="ContenedorCrearModal"></div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="deleteModal" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h2 class="modal-title" id="exampleModalLabel">Are you sure to eliminate the style?</h2>
			</div>
			<div class="modal-body">
				<div id="ContenedorDeleteModal"></div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid" style="padding-left:20em; padding-right:10em;">
	<div class="panel panel-primary" id="consultaPO">
		<div class="panel-heading">
			<h3>
				Administration of styles
			</h3>
		</div>
		<br />
		<p>

			<button type="button" class="btn btn-primary" id="nuevo-usuario" data-toggle="modal">
				<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> ADD NEW STYLE
			</button>

		</p>
		<br />
		<table class="table table-striped" id="tablaTalla">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.ItemEstilo)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Descripcion)
					</th>
					<th>ACTIONS</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.ItemEstilo)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Descripcion)
						</td>
						<td>

							<a href="#" class="btn edit_driver edicion_driver btnEdit" data-value="@item.ItemId " title="Edit Style"><span class="glyphicon glyphicon-edit " aria-hidden="true" style="padding: 0px !important;"></span></a>
							<a href="#" class="btn edit_driver edicion_driver btnSearch" data-value="@item.ItemId " title="Details Style"><span class="glyphicon glyphicon-search " aria-hidden="true" style="padding: 0px !important;"></span></a>
							<a href="#" class="btn edit_driver edicion_driver btnDelete" data-value="@item.ItemId " title="Delete Style"><span class="glyphicon glyphicon-trash " aria-hidden="true" style="padding: 0px !important;"></span></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
<script>
	$('#tablaTalla tr').click(function (e) {
		$('#tablaTalla tr').removeClass('highlighted');
		$(this).addClass('highlighted');
	});

	$(document).on('click', '.btnSearch', function () {
		$("#loading").css('display', 'none');
		var id = $(this).data("value");
		$('#consulModal').modal('show');
		$("#ContenedorModal").load("/ItemDescripcion/Detalles/" + id, function () {
		});
	});

	$(document).on('click', '.btnEdit', function () {
		$("#loading").css('display', 'none');
		var id = $(this).data("value");
		$('#editarModal').modal('show');
		$("#ContenedorEditModal").load("/ItemDescripcion/Editar/" + id, function () {
		});
	});

	$(document).on('click', '.btnDelete', function () {
		$("#loading").css('display', 'none');
		var id = $(this).data("value");
		$('#deleteModal').modal('show');
		$("#ContenedorDeleteModal").load("/ItemDescripcion/Eliminar/" + id, function () {
		});
	});

	$(document).on('click', '#nuevo-usuario', function () {
		$("#loading").css('display', 'none');
		var id = $(this).data("value");
		$('#crearModal').modal('show');
		$("#ContenedorCrearModal").load("/ItemDescripcion/CrearItemDesc/" + id, function () {
		});
	});
</script>
