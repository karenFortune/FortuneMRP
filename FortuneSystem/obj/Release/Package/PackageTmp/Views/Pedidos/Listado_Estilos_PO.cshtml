@model IEnumerable<FortuneSystem.Models.POSummary.POSummary>


<div id="div_tabla" style="width: 100%; height:400px; overflow:auto; ">
    <table align="center" class="table table-striped" id="tablaPOEstilos" >
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.EstiloItem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemDescripcion.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CatColores.CodigoColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CatColores.DescripcionColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @Html.HiddenFor(modelItem => item.IdItems)
                    <td>
                        @Html.DisplayFor(modelItem => item.EstiloItem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemDescripcion.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CatColores.CodigoColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CatColores.DescripcionColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        <a href="#" class="btn btn-default glyphicon glyphicon-edit btnEdit" data-value="@item.IdItems" title="Edit Estilo"></a> |
                        @*@Html.ActionLink(" ", "Eliminar", new { id = item.IdItems }, new { @class = "btn btn-default glyphicon glyphicon-trash", @style = "color:black", @Title = "Delete Style" })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">STYLE</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div id="ContenedorModal"></div>
                </div>
                @*<div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                 </div>*@
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".btnEdit").click(function () {
                var id = $(this).data("value");
                $("#ContenedorModal").load("/Pedidos/EditarEstilo/" + id, function () {
                    $("#IdItems").val(id);
                    $("#myModal").modal("show");
                });
            });
        });

    </script>
