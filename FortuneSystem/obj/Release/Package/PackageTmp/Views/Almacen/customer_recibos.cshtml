    var tallas, recibos_tallas,tallas_final;
    function buscar_tallas_orden_customer(id) {
        $("#load_cr").css('display', 'inline');
        $.ajax({
            url: '/Almacen/buscar_informacion_recibos',
            contentType: 'application/json',
            data: "{'estilo':'" + id + "'}",
            dataType: 'json',
            type: 'post',
            success: function (jsonData) {
                tallas = jsonData.Data.tallas;
                var totales = [];           
                var tallas_finales = [], cantidades_originales = [], cantidades_finales = [],suma_orden=0;
                $.each(tallas, function (key, r) {                    
                    tallas_finales.push(r.id_talla);
                    cantidades_originales.push(r.total + r.extras + r.ejemplos);
                    cantidades_finales.push(0);
                    totales.push(r.total + r.extras + r.ejemplos);
                    suma_orden += r.total + r.extras + r.ejemplos;
                });         
                totales.push(suma_orden);

                recibos_tallas = jsonData.Data.recibos_tallas;
                var html = '';                
                var encabezado = '<tr><th>DATE</th><th>MILL PO</th><th>REFERENCE PO</th>';
                $.each(tallas, function (key, r) {
                    encabezado += '<th>'+r.talla+'</th>';
                }); encabezado += '<th>TOTAL</th></tr>';
                $(".cabecera_tabla_tallas_customer_recibos").html(encabezado);
                $.each(recibos_tallas, function (key, item) {
                    var total_row = 0;
                    html += '<tr>';
                    html += '<td>' + item.fecha + '</td>';
                    html += '<td>' + item.mill_po + '</td>';
                    html += '<td>' + item.po_referencia + '</td>';  
                    for (var i = 0; i < tallas_finales.length; i++) {
                        var existe = 0, existencia = 0;
                        $.each(item.lista_recibos_item, function (key, t) {
                            if (t.id_talla == tallas_finales[i]) {
                                existe++;
                                cantidades_finales[i] += t.total;
                                existencia = t.total;
                                html += '<td><p>' + t.total + '</p><p>'+t.item.fabric_percent+'</p><p>'+t.item.pais+'</p></td>';
                                total_row += t.total;
                                totales[i] = totales[i] - t.total;
                            }
                        });
                        if (existe == 0) {
                            //html += '<td>' + total_row + '</td>';
                            html += '<td>0</td>';
                        } /*else {
                           // html += '<td>0</td>';
                        }*/
                    }
                    totales[i] = totales[i] - total_row;
                    html += '<td>' + total_row + '</td>';
                    html += '</tr>';
                });
                html += '<tr><td></td><td></td><td><b>+/-</b></td>';
                var i = 0;
                $.each(tallas, function (key, t) {                    
                    for (i = 0; i< cantidades_finales.length; i++) {
                        if (t.id_talla == tallas_finales[i]) {
                            var final = cantidades_originales[i] - cantidades_finales[i];
                            if (final == 0) {
                                html += '<td style="color:black;">0</td>';
                            } else {                                
                                if (final >= 1) {
                                    html += '<td style="color:#f60000;">-' + final + '</td>';
                                } else {
                                    html += '<td style="color:#126dca;">+' +  Math.abs(final) + '</td>';
                                }
                            }            
                        }
                    }
                }); 
                if (totales[i]==0) {
                        html += '<td style="color:black;">-' + totales[i] + '</td>';
                    } else {
                        if (totales[i]>0) {
                            html += '<td style="color:#f60000;">-' + totales[i] + '</td>';
                        } else {
                            //var temporal = (totales[i]).split('+');
                            html += '<td style="color:#126dca;">+' + Math.abs(totales[i]) + '</td>';
                        }
                    }
                html += '</tr>';
                $("#div_tabla_tallas").css('visibility', 'visible');
                $(".body_tabla_tallas_customer_recibos").html(html);
                $("#load_cr").css('display', 'none');
            }
        });
    }
