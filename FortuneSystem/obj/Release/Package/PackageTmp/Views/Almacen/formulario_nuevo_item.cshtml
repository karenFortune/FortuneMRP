    function editar_categoria(id) {
        $('#tabla_categorias tbody tr').each(function () {
            if ($(this).find('td:eq(0)').html() == id) {
                $("#id_categoria_hidden").val(id);
                $("#caja_nombre_categoria_editar").val($(this).find('td:eq(1)').html());
                $("#div_edicion_categoria").css('visibility','visible');
            }
        });
    }

    function guardar_edicion_categoria(event) {
        if ($("#caja_nombre_categoria_editar").val() != "") {
            $("#caja_nombre_categoria_editar").css('border', '1px solid #cccccc');
            $.ajax({
                url: "/Almacen/edicion_categoria",
                data: "{'id':'" + $("#id_categoria_hidden").val() + "','nombre':'"+$("#caja_nombre_categoria_editar").val()+"'}",
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result == 0) {
                        alertify.success('Success!');
