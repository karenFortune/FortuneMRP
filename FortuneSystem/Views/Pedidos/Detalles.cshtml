                    html += '<td>' + item.pedido + '</td>';
                    html += '<td>' + item.estilo + '</td>';
                    html += '<td>' + item.descripcion + '</td>';
                    html += '<td>' + item.color + '</td>';
                    html += '<td>' + item.total + '</td>';
                    html += '<td>' + item.estado + '</td>';
                    html += '</tr>';
                });

                if (Object.keys(lista_estilo).length === 0) {
                    html += '<tr class="odd"><td valign="middle" align="center" colspan="10" class="dataTables_empty">No PO were found for the style.</td></tr>';
                }
                $('.tbodysList').html(html);

            },
            error: function (errormessage) { alert(errormessage.responseText); }
        });
        $("#listaPOEstiloModal").modal("show");
