    var tallas, tallas_primera_calidad, tallas_finales, tallas_extras, tallas_dmg, primera_calidad;
    function buscar_tallas_orden_customer_shipping(id) {
        $("#load_csp").css('display', 'inline');
        $.ajax({
            url: '/Shipping/buscar_informacion_shipping',
            contentType: 'application/json',
            data: "{'estilo':'" + id + "'}",
            dataType: 'json',
            type: 'post',
            success: function (jsonData) {
                tallas = jsonData.Data.tallas;
                var tallas_finales = [], cantidades_originales = [], cantidades_finales = [], cantidades_extras = [], cantidades_dmg = [], finales_extras = [], finales_dmg = [], cantidades_samples = [];
                var totales = [],suma_orden = 0;
                $.each(tallas, function (key, r) {
                    tallas_finales.push(r.id_talla);
                    cantidades_originales.push(r.total);
                    suma_orden += r.total;
                    totales.push(r.total);
                    cantidades_extras.push(r.extras);
                    cantidades_samples.push(r.ejemplos);
                    cantidades_finales.push(0);
                    finales_extras.push(0);
                    //finales_dmg.push(0);
                });
                totales.push(suma_orden);
                primera_calidad = jsonData.Data.tallas_primera_calidad;
                tallas_extras = jsonData.Data.tallas_extras;
                //tallas_dmg = jsonData.Data.tallas_dmg;
                tallas_samples = jsonData.Data.tallas_samples;
                var html = '';
                var encabezado = '<tr><th>DATE</th><td>PACKING</td><th>SHIP TO</th>';
                $.each(tallas, function (key, r) {
                    encabezado += '<th>'+r.talla+'</th>';
                }); encabezado += '<th>TOTAL</th></tr>';
                var i = 0;
                $(".cabecera_tabla_tallas_customer_shipping").html(encabezado);
                $.each(primera_calidad, function (key, item) {
                    html += '<tr>';
                    html += '<td>' + item.fecha + '</td>';
                    html += '<td>' + item.packing + '</td>';
                    if (item.destino.nombre == null) {
                        html += '<td></td>';
                    } else {
                        html += '<td>' + item.destino.nombre + '</td>';
                    }
                    var total_fila = 0;
                    var i2 = 0;
                    for (var i = 0; i < tallas_finales.length; i++){
                        var existe = 0, existencia = 0;
                        $.each(item.lista_tallas, function (key, t) {
                            if (t.id_talla == tallas_finales[i]) {
                                existe++;
                                cantidades_finales[i] += t.total;
                                 html += '<td>' + t.total + '</td>';
                                existencia = t.total;
                                totales[i] = totales[i] - t.total;
                                total_fila+=t.total;
                            }
                        });
                        if (existe == 0) {html += '<td>0</td>'; }
                        i2++;
                    }
                    totales[i2] = totales[i2] - total_fila;
                    html += '<td>' + total_fila+ '</td>';
                    html += '</tr>';
                });
                html += '<tr><td></td><td></td><td><b>+/-</b></td>';
                var i = 0;
                $.each(tallas, function (key, t) {
                    for (i = 0; i< cantidades_finales.length; i++) {
                        if (t.id_talla == tallas_finales[i]) {
                            var final = cantidades_originales[i] - cantidades_finales[i];
                            if (final == 0) {
                                html += '<td style="color:black;">0</td>';
                            } else {
                                if (final >= 1) {
                                    html += '<td style="color:#f60000;">-' + final + '</td>';
                                } else {
                                    html += '<td style="color:#126dca;">+' + Math.abs(final) + '</td>';
                                }
                            }
                        }
                    }
                });
                if (totales[i]==0) {
                    html += '<td style="color:black;">' + totales[i] + '</td>';
                } else {
                    if (totales[i]>0) {
                        html += '<td style="color:#f60000;">-' + totales[i] + '</td>';
                    } else {
                        html += '<td style="color:#126dca;">+' + Math.abs(totales[i]) + '</td>';
                    }
                }
                html += '</tr>';
                //*******EXTRAS***********************************************************************************
               html += '<tr><td></td><td></td><td><b>EXTRAS</b></td>';
                var contador = 0,suma_total=0,suma_enviado=0;
                $.each(tallas, function (key, item) {
                    var suma = 0;
                    $.each(tallas_extras, function (key, i) {
                        $.each(i.lista_tallas, function (key, j) {
                            if (item.id_talla == j.id_talla) {
                                suma +=j.total;
                            }
                        });
                    });
                    suma_total += cantidades_extras[contador];
                    suma_enviado += suma;

                    if ((cantidades_extras[contador]-suma)==0) {
                        html += '<td style="color:black;">'  + suma + "/" + cantidades_extras[contador] + '</td>';
                    } else {
                        if (totales[i]>0) {
                            html += '<td style="color:#f60000;">' + suma + "/" + cantidades_extras[contador] + '</td>';
                        } else {
                            html += '<td style="color:#126dca;">'  + suma + "/" + cantidades_extras[contador] + '</td>';
                        }
                    }

                    //html += '<td>' + suma + "/" + cantidades_extras[contador] + '</td>';
                    contador++;
                });
                if ((suma_total-suma_enviado)==0) {
                        html += '<td style="color:black;">'   + suma_enviado + "/" + suma_total +'</td>';
                    } else {
                        if (totales[i]>0) {
                            html += '<td style="color:#f60000;">'  + suma_enviado + "/" + suma_total + '</td>';
                        } else {
                            html += '<td style="color:#126dca;">'   + suma_enviado + "/" + suma_total + '</td>';
                        }
                    }
                //html += '<td>' + suma_enviado + "/" + suma_total + '</td>';
                html += '</tr>';
            //******************************************************************************************
            //*******SAMPLES***********************************************************************************
                html += '<tr><td></td><td></td><td><b>SAMPLES</b></td>';
                suma_total = 0;suma_enviado=0;
                var contador = 0;
                $.each(tallas, function (key, item) {
                    var suma = 0;
                    $.each(tallas_samples, function (key, i) {
                        $.each(i.lista_tallas, function (key, j) {
                            if (item.id_talla == j.id_talla) {
                                suma +=j.total;
                            }
                        });
                    });
                    suma_total += cantidades_samples[contador];
                    suma_enviado += suma;
                     if ((cantidades_samples[contador]-suma)==0) {
                        html += '<td style="color:black;">'  + suma + "/" + cantidades_samples[contador] + '</td>';
                     } else {
                        if (totales[i]>0) {
                            html += '<td style="color:#f60000;">' + suma + "/" + cantidades_samples[contador] + '</td>';
                        } else {
                            html += '<td style="color:#126dca;">'  + suma + "/" + cantidades_samples[contador] + '</td>';
                        }
                    }
                   // html += '<td>' + suma + "/" + cantidades_samples[contador] + '</td>';
                    contador++;
                });
                if ((suma_total-suma_enviado)==0) {
                 html += '<td style="color:black;">'   + suma_enviado + "/" + suma_total +'</td>';
                } else {
                    if (totales[i]>0) {
                        html += '<td style="color:#f60000;">'  + suma_enviado + "/" + suma_total + '</td>';
                    } else {
                        html += '<td style="color:#126dca;">'   + suma_enviado + "/" + suma_total + '</td>';
                    }
                }
                //html += '<td>' + suma_enviado + "/" + suma_total + '</td>';
                html += '</tr>';
               //******************************************************************************************
               // html += '</tr>';
                $("#div_tabla_tallas_shipping").css('visibility', 'visible');
                $(".body_tabla_tallas_customer_shipping").html(html);
                $("#load_csp").css('display', 'none');
            }
        });
    }
